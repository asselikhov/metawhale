# ========================================
# Telegram Bot Configuration
# ========================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=https://your-app-name.onrender.com

# ========================================
# Database Configuration
# ========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name

# ========================================
# API Keys
# ========================================
# CoinGecko API Key (optional, has free tier)
COINGECKO_API_KEY=your_coingecko_api_key_here

# CoinMarketCap API Key
CMC_API_KEY=your_coinmarketcap_api_key_here

# ========================================
# Blockchain Configuration
# ========================================
# Wallet encryption key (generate a secure random string)
WALLET_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Polygon RPC URL (you can use public endpoints or get your own)
POLYGON_RPC_URL=https://polygon-rpc.com

# Contract addresses
CES_TOKEN_ADDRESS=0x1Bdf71EDe1a4777dB1EebE7232BcdA20d6FC1610
ESCROW_CONTRACT_ADDRESS=0x04B16d50949CD92de90fbadcF49745897CbED5C4

# ========================================
# Application Settings
# ========================================
# Server port
PORT=3000

# API call interval (milliseconds)
API_CALL_INTERVAL=2000

# Escrow timeout (minutes)
ESCROW_TIMEOUT_MINUTES=30

# Use smart contract escrow (true/false)
USE_SMART_CONTRACT_ESCROW=true

# ========================================
# Development Settings
# ========================================
# Node environment
NODE_ENV=production

# Log level (error, warn, info, debug)
LOG_LEVEL=info